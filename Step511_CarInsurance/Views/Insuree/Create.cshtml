@model Step511_CarInsurance.Models.Insuree

@{
    ViewBag.Title = "Create";
}

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h2 class="m-0">Enter your info to calculate a quote:</h2>
        </div>
        <div class="card-body">
           @using (Html.BeginForm("CreateAndCalculate", "Insuree", FormMethod.Post))
            {
            <div class="row no-gutters">
                <div class="form-group col-md-12">
                    <label>First Name:</label>
                    <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                </div>
                <div class="form-group col-md-12">
                    <label>Last Name:</label>
                    <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                </div>
                <div class="form-group col-md-12">
                    <label>Email Address:</label>
                    <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
                </div>
                <div class="form-group col-md-12">
                    <label>Date of Birth:</label>
                    <input name="DateOfBirth" type="datetime" class="form-control" placeholder="Date of Birth" />
                </div>
                <div class="form-group col-md-12">
                    <label>Car Year:</label>
                    <input name="CarYear" type="number" class="form-control" placeholder="Car Year" />
                </div>
                <div class="form-group col-md-12">
                    <label>Car Make: </label>
                    <input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
                </div>
                <div class="form-group col-md-12">
                    <label>Car Model: </label>
                    <input name="CarModel" type="text" class="form-control" placeholder="Car Model" />
                </div>
                <div class="form-group col-md-12">
                    <label>Have you ever had a DUI?</label>
                    <input name="Dui" type="checkbox" class="form-control" value="true" />
                    <input name="Dui" type="hidden" class="form-control" value="false" />
                </div>
                <div class="form-group col-md-12">
                    <label>Number of speeding tickets:</label>
                    <input name="SpeedingTickets" type="number" class="form-control" value="0" />
                </div>
                <div class="form-group col-md-12">
                    <label>Would you like full coverage?</label>
                    <input name="CoverageType" type="checkbox" class="form-control" value="true" />
                    <input name="CoverageType" type="hidden" class="form-control" value="false" />
                </div>
                <div class="form-group col-md-12">
                    <h2>Click CALCULATE to get your quote!</h2>
                    <input name="Quote" type="hidden" class="form-control" value="0" />
                </div>
                <button type="submit" class="btn btn-block btn-primary">CALCULATE</button>
            </div>
            }
        </div>
    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
